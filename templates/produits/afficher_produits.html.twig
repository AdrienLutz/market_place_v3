{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
    <h1>Liste des produits</h1>
    <ul>
        {% for produit in produits %}
            <li>{{ produit.nom }} - {{ produit.prix }} €</li>
            <ul>
                {% for categorie in categories %}
                    {% if produit.categorie_id == categorie.id %}
                        <li>Catégorie: {{ categorie.nom }}</li>
                    {% endif %}
                {% endfor %}
            </ul>
            <ul>
                {% for distributeur in distributeurs %}
                    {% if produit.distributeur_id == distributeur.id %}
                        <li>Distributeur: {{ distributeur.nom }}</li>
                    {% endif %}
                {% endfor %}
            </ul>
        {% endfor %}
    </ul>
{% endblock %}


