{% extends 'base.html.twig' %}

{% block title %}Produits index{% endblock %}

{% block body %}
    <h1>Tous les produits</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Mis à jour le</th>
                <th>Ajouté le </th>
                <th>Prix</th>
                <th>Image</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.name }}</td>
                <td>{{ produit.updatedAt ? produit.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ produit.createdAt ? produit.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ produit.price }}</td>
                <td>{{ produit.image }}</td>
                <td>
                    <a href="{{ path('app_produits_show', {'id': produit.id}) }}">détail</a>
{#                    <a href="{{ path('app_produits_edit', {'id': produit.id}) }}">modifier</a>#}
                    <a href="{{ path('app_panier', {'id': produit.id}) }} " class="btn btn-success mt-3"> ajouter au panier</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun produit disponible</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{#    <a href="{{ path('app_produits_new') }}">Create new</a>#}
{% endblock %}
